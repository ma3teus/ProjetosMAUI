<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppNumeroDaSorte.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout VerticalOptions="CenterAndExpand">
            <Image
                Margin="0,0,0,0"
                HeightRequest="115"
                Source="logo_green.png"
                WidthRequest="74" />
            <Label
                x:Name="AppName"
                Margin="0,20,0,120"
                HorizontalOptions="Center"
                Text="Número da sorte"
                TextColor="#00AB37"
                VerticalOptions="Center" />
            <VerticalStackLayout x:Name="ConainerLuckNumbers" IsVisible="false">
                <Label
                    Margin="0,20,0,0"
                    HorizontalOptions="Center"
                    Text="Número da sorte é:" />
                <HorizontalStackLayout
                    Margin="0,70"
                    HorizontalOptions="Center"
                    Spacing="20">
                    <Border
                        Padding="8,5"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8">
                        <Label
                            x:Name="LuckNumber01"
                            FontSize="24"
                            Text="01"
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="8,5"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8">
                        <Label
                            x:Name="LuckNumber02"
                            FontSize="24"
                            Text="01"
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="8,5"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8">
                        <Label
                            x:Name="LuckNumber03"
                            FontSize="24"
                            Text="01"
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="8,5"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8">
                        <Label
                            x:Name="LuckNumber04"
                            FontSize="24"
                            Text="01"
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="8,5"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8">
                        <Label
                            x:Name="LuckNumber05"
                            FontSize="24"
                            Text="01"
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="8,5"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8">
                        <Label
                            x:Name="LuckNumber06"
                            FontSize="24"
                            Text="01"
                            TextColor="#00AB37" />
                    </Border>
                </HorizontalStackLayout>
                <Label
                    Margin="0,0,0,50"
                    HorizontalOptions="Center"
                    Text="Boa sorte" />
            </VerticalStackLayout>
            <Button
                Clicked="OnGerenateLuckNumbers"
                HorizontalOptions="Center"
                Text="Gerar número da sorte" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>